FROM docker_ansible_{{ ubuntu_version  }}

# ==> Specify requirements filename;  default = "requirements.yml"
#ENV REQUIREMENTS  requirements.yml

# ==> Specify playbook filename;      default = "playbook.yml"
ENV PLAYBOOK      ansible-artimed/galaxy.yml

# ==> Specify inventory filename;     default = "/etc/ansible/hosts"
ENV INVENTORY     inventory.yml

# ==> Executing Ansible (with a simple wrapper)...
ONBUILD  RUN  DEBIAN_FRONTEND=noninteractive  apt-get update   && \
              echo "===> Updating TLS certificates..."         && \
              apt-get install -y openssl ca-certificates

ONBUILD  WORKDIR  /tmp
ONBUILD  COPY  .  /tmp
ONBUILD  RUN  \
              echo "===> Diagnosis: host information..."  && \
              ansible -c local -m setup all

RUN ansible-playbook-wrapper

ENTRYPOINT ansible-playbook $PLAYBOOK -c local --tags persists_galaxy --skip-tags=skip_supervisor_start_in_docker -i $INVENTORY && \
           /usr/bin/python /usr/bin/supervisord -c /etc/supervisor/supervisord.conf --nodaemon

# Expose port 80 (webserver), 21 (FTP server), 8800 (Proxy), 9002 (supvisord web app)
EXPOSE :80
EXPOSE :21
EXPOSE :8800
EXPOSE :9002

# Mark folders as imported from the host.
VOLUME ["/export", "/var/lib/docker"]
